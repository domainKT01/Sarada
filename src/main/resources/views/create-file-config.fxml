<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/fxml/1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.solproe.ui.controllers.FormController">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <GridPane hgap="10" vgap="10">
                <Label text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtCiudad" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Umbral de Temperatura (°C):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtTemperatura" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Umbral de Humedad (%):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtHumedad" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Umbral de Velocidad del Viento (km/h):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="txtViento" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Umbral de Precipitación (mm):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="txtPrecipitacion" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
            <Button text="Guardar" />
        </VBox>
    </center>
</BorderPane>