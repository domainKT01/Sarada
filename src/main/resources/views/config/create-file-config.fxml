<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/fxml/1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.solproe.ui.controllers.FormController" styleClass="configFile" stylesheets="@/configFile.css">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <GridPane hgap="10" vgap="10">
                <Label text="Nombre del Proyecto:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="projectName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Departamento:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="stateName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Municipio:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="cityName" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Umbral de incendio forestal - Alerta Naranja (°C):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="forestFireThresholdOrange" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Umbral de incendio forestal - Alerta Roja (°C):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="forestFireThresholdRed" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Umbral de precipitación movimiento en masa - Alerta Naranja (mm):" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="precipitationThresholdOrange" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Umbral de precipitación movimiento en masa - Alerta Roja (mm):" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="precipitationThresholdRed" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Umbral de precipitación por probabilidad de lluvia (%) - Alerta Naranja:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <TextField fx:id="precipitationRainPercentOrange" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <Label text="Umbral de precipitación por probabilidad de lluvia (%) - Alerta Roja:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <TextField fx:id="precipitationRainPercentRed" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                <Label text="Umbral de velocidad del viento (Km/h) - Alerta Naranja:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
                <TextField fx:id="windThresholdOrange" GridPane.columnIndex="1" GridPane.rowIndex="9" />

                <Label text="Umbral de velocidad del viento (Km/h) - Alerta Roja:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                <TextField fx:id="windThresholdRed" GridPane.columnIndex="1" GridPane.rowIndex="10" />

                <Label text="Umbral de clima esperado para fenómenos ceráunicos - Alerta Roja" GridPane.columnIndex="0" GridPane.rowIndex="11" />
                <TextField fx:id="ceraunicosThresholdRed" GridPane.columnIndex="1" GridPane.rowIndex="11" />

                <Label text="Proyecto ID" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                <TextField fx:id="idProject" GridPane.columnIndex="1" GridPane.rowIndex="12" />

                <Label text="Jefe SCI" GridPane.columnIndex="0" GridPane.rowIndex="13" />
                <TextField fx:id="sciBoss" GridPane.columnIndex="1" GridPane.rowIndex="13" />

                <Label text="Jefe SCI Contacto" GridPane.columnIndex="0" GridPane.rowIndex="14" />
                <TextField fx:id="sciBossContact" GridPane.columnIndex="1" GridPane.rowIndex="14" />

                <Label text="Auxiliar Jefe SCI" GridPane.columnIndex="0" GridPane.rowIndex="15" />
                <TextField fx:id="auxiliarSciBoss" GridPane.columnIndex="1" GridPane.rowIndex="15" />

                <Label text="Auxiliar Jefe SCI Contacto" GridPane.columnIndex="0" GridPane.rowIndex="16" />
                <TextField fx:id="auxiliarSciBossContact" GridPane.columnIndex="1" GridPane.rowIndex="16" />
            </GridPane>
            <Button text="Guardar" fx:id="saveButton"/>
            <Button text="Actualizar" fx:id="updateButton"/>
        </VBox>
    </center>
</BorderPane>